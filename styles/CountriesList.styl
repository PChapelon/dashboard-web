.countriesList_content
  display flex
  padding 10px
.country
  margin 0px 10px
  display grid
  grid-template-rows repeat(8, 1fr)
  min-width 300px
  width 300px
  padding 0px
  background-color whiteSmoke
  border-radius 5px

.country__title
  display flex
  align-items center
  justify-content center
  text-align center
  text-transform uppercase
  font-size 20px
  margin 10px
.country__detail
  display flex
  flex-direction column
  text-align center
  padding 10px
  border-top 1px solid lightGray
.latlng
  flex-direction row
  align-items center
  justify-content space-evenly
.country__detailTitle
  text-transform uppercase
  margin 5px 0
  font-weight bold
