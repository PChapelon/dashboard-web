.navigationBar {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  margin-top 60px
}
.navigationBar__item
  display: flex;
  flex-direction: column
  align-items: center
  background-color: rgba(grey, 0.05)
  border-radius: 8px;
  input
    display: none
  &:not(:last-child)
    margin-right: 10px;
.navigationBar__checkboxLabel
  display flex
.navigationBar__flag
  min-width 40px
  height 26px
  margin 5px
  background-position center
  background-size 43px
  background-repeat no-repeat
  border-radius 5px
  cursor pointer;
.navigationBar__checkbox
  display: flex
  align-items: center
  justify-content center
  width: 50px
  height 40px
  margin-bottom: 5px
  cursor pointer;
